generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Accommodation {
  id          String  @id @default(uuid()) @db.Uuid
  name        String
  location    String
  sumary      String
  description String  @db.Text
  price       Float
  isAvailable Boolean

  @@map("accommodations")
}
